extends layout

block content
  include loader

  #app
    include modal
    
    .pricing-header.px-3.py-3.pt-md-5.pb-md-4.mx-auto.text-center
      h1.display-4
        img.mb-2(src="/images/logo-v2-55.png" alt="")
        p.lead
          | legislador (search: transporte)
          
    .container
      .card-deck.mb-3.text-center
        each project, index in projects
          .card.mb-4.shadow-sm
            .card-header
              h6.my-0.font-weight-bold
                | #{project.title}
                small.text-muted #{project.date.toLocaleDateString("pt-BR")}
            .card-body
              p #{project.text}
              button.btn.btn-lg.btn-block.btn-primary(data-toggle="modal", data-target="#modalDetails", data-project=index, type="button" v-on:click="setProject") Veja mais
        
    footer.pt-2.pt-md-5.border-top
      .row
        .col-2.col-md
          small.d-block.mb-3.text-muted iBureau &copy; 2020
      
    script.
      const projects = !{JSON.stringify(projects)};
    script(src="https://cdn.jsdelivr.net/npm/vue")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js", integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6", crossorigin="anonymous")
    script(src="/javascripts/app.js")
